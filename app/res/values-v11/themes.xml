<resources>
    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:colorBackground">@color/cc_neutral_bg</item>
        <item name="android:radioButtonStyle">@style/radio_button_modern</item>
        <item name="entity_detail_even_row_color">@color/translucent_grey_light</item>
        <item name="entity_detail_odd_row_color">@color/transparent</item>
    </style>
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="TextAppearance.Custom.WindowTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"/>
    <style name="TextAppearance.Custom.WindowTitle.Case" parent="style/TextAppearance.Custom.WindowTitle">
    </style>
    
    <style name="TextAppearance.Custom.WindowTitle.Menu" parent="style/TextAppearance.Custom.WindowTitle">
    </style>
    
    <style name="WindowTitle.Custom.Menu" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Custom.WindowTitle.Menu</item>
        <item name="android:background">@drawable/title_neutral_tab</item>
        <item name="android:paddingRight">@dimen/title_padding</item>
        <item name="android:layout_marginLeft">@dimen/title_round_bleed</item>
        <item name="android:paddingLeft">@dimen/title_paddingLeft</item>
	</style>
	
	<style name="WindowTitle.Custom.Case" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Custom.WindowTitle.Case</item>
        <item name="android:background">@drawable/title_case_tab</item>
        <item name="android:paddingRight">@dimen/title_padding</item>
        <item name="android:layout_marginLeft">@dimen/title_round_bleed</item>
        <item name="android:paddingLeft">@dimen/title_paddingLeft</item>
	</style>
    
    

</resources>
