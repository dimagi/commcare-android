<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="8dp"
    android:layout_height="wrap_content">

    <org.commcare.views.connect.connecttextview.ConnectRegularTextView
        android:id="@+id/tv_primary_visit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Primary Visit"
        android:textColor="@color/connect_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.commcare.views.connect.connecttextview.ConnectMediumTextView
        android:id="@+id/tv_primary_visit_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="2/2"
        android:textColor="@color/connect_dark_blue_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_primary_visit_title"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/tv_primary_visit_title" />

    <org.commcare.views.connect.LinearProgressBar
        android:id="@+id/lp_primary_visit_progress"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_primary_visit_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/tv_primary_visit_title" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>