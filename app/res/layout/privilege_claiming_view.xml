<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_views_container"
        android:gravity="center"
        android:layout_margin="@dimen/standard_spacer"
        android:layout_marginBottom="@dimen/standard_spacer_large" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enabled_textview"
            android:textSize="@dimen/font_size_large"
            android:gravity="center"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/not_enabled_textview"
            android:text="@string/privilege_not_enabled_text"
            android:textSize="@dimen/font_size_large"
            android:gravity="center"
            android:visibility="gone"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructions"
        android:text="@string/privilege_instructions"
        android:gravity="center"
        android:layout_marginLeft="@dimen/standard_spacer_double"
        android:layout_marginRight="@dimen/standard_spacer_double"
        android:layout_marginTop="@dimen/standard_spacer"
        android:layout_marginBottom="@dimen/standard_spacer"
        android:textSize="@dimen/font_size_medium"
        android:layout_marginStart="@dimen/standard_spacer_double"
        android:layout_marginEnd="@dimen/standard_spacer_double" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/claim_button"
        android:textSize="@dimen/font_size_xlarge"
        android:text="@string/claim_privilege_button_text" />

</LinearLayout>