<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id = "@+id/widgetinfo"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:id = "@+id/gregdayofweek"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="200dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/dayupbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="@dimen/text_largest"
            android:textColor="@color/darkest_grey"/>

        <EditText
            android:id="@+id/daytxtfield"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_below="@id/dayupbtn"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="28dp"
            android:inputType="number"
            android:maxLength = "2"/>

        <Button
            android:id="@+id/daydownbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/daytxtfield"
            android:background="@drawable/date_button_bottom"
            android:text="-"
            android:textSize="@dimen/text_largest"
            android:textColor="@color/darkest_grey"/>

        <Button
            android:id="@+id/monthupbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/dayupbtn"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="@dimen/text_largest"
            android:textColor="@color/darkest_grey"/>

        <AutoCompleteTextView
            android:id="@+id/monthtxtfield"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@id/monthupbtn"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/daytxtfield"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="@dimen/text_larger"
            android:inputType="text"/>

        <Button
            android:id="@+id/monthdownbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/monthtxtfield"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/daydownbtn"
            android:background="@drawable/date_button_bottom"
            android:text="-"
            android:textSize="@dimen/text_largest"
            android:textColor="@color/darkest_grey"/>

        <Button
            android:id="@+id/yearupbtn"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthupbtn"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="@dimen/text_largest"
            android:textColor="@color/darkest_grey"/>

        <EditText
            android:id="@+id/yeartxtfield"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_below="@id/yearupbtn"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthtxtfield"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="@dimen/text_larger"
            android:inputType="number"
            android:maxLength="4"/>

        <Button
            android:id="@+id/yeardownbtn"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/yeartxtfield"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthdownbtn"
            android:background="@drawable/date_button_bottom"
            android:text="-"
            android:textSize="@dimen/text_largest"
            android:textColor="@color/darkest_grey"/>
    </RelativeLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="X"
        android:textColor="@color/red"
        android:id = "@+id/clearall"/>

</LinearLayout>
