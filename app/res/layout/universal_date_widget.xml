<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/dayupbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            style="@style/CommCare.Button.Default"
            android:backgroundTint="@color/cc_brand_color"
            android:textColor="@color/white"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="@dimen/text_largest"/>

        <TextView
            android:id="@+id/daytxt"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_below="@id/dayupbtn"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="@dimen/text_larger"/>

        <Button
            android:id="@+id/daydownbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/daytxt"
            android:background="@drawable/date_button_bottom"
            style="@style/CommCare.Button.Default"
            android:backgroundTint="@color/cc_brand_color"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="@dimen/text_largest"/>

        <Button
            android:id="@+id/monthupbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/dayupbtn"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="@dimen/text_largest"
            style="@style/CommCare.Button.Default"
            android:backgroundTint="@color/cc_brand_color"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/dayupbtn"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/monthtxt"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@id/monthupbtn"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/daytxt"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="@dimen/text_larger"
            android:layout_toEndOf="@id/daytxt"
            android:layout_marginStart="5dp" />

        <Button
            android:id="@+id/monthdownbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/monthtxt"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/daydownbtn"
            android:background="@drawable/date_button_bottom"
            android:text="-"
            android:textSize="@dimen/text_largest"
            style="@style/CommCare.Button.Default"
            android:backgroundTint="@color/cc_brand_color"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/daydownbtn"
            android:layout_marginStart="5dp" />

        <Button
            android:id="@+id/yearupbtn"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthupbtn"
            android:background="@drawable/date_button_top"
            android:text="+"
            android:textSize="@dimen/text_largest"
            style="@style/CommCare.Button.Default"
            android:backgroundTint="@color/cc_brand_color"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/monthupbtn"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/yeartxt"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_below="@id/yearupbtn"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthtxt"
            android:background="@drawable/date_edit"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="@dimen/text_larger"
            android:layout_toEndOf="@id/monthtxt"
            android:layout_marginStart="5dp" />

        <Button
            android:id="@+id/yeardownbtn"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/yeartxt"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/monthdownbtn"
            android:background="@drawable/date_button_bottom"
            android:text="-"
            android:textSize="@dimen/text_largest"
            style="@style/CommCare.Button.Default"
            android:backgroundTint="@color/cc_brand_color"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/monthdownbtn"
            android:layout_marginStart="5dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dateGregorian"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_small"/>

</LinearLayout>
