<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:gravity="center"
        android:id="@+id/layout_note_msg_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Message Title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/layout_note_msg_date"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_spacer"
        android:layout_width="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/layout_note_msg_body"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_spacer"
        android:layout_width="wrap_content"
        android:text="Explanation of error message"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/layout_note_msg_action"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_spacer"
        android:layout_width="wrap_content"
        android:text="What to do about it"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>