<resources>
    <declare-styleable name="AspectRatioLayout">
        <attr name="ratio_width" format="float"/>
        <attr name="ratio_height" format="float"/>
    </declare-styleable>
    <attr name="detail_even_row_color" format="reference"/>
    <attr name="detail_odd_row_color" format="reference"/>
    <attr name="entity_view_header_background_color" format="reference"/>
    <attr name="entity_view_header_text_color" format="reference"/>
    <attr name="searchbox_action_bar_color" format="reference"/>
    <attr name="drawer_pulldown_text_color" format="reference"/>
    <attr name="drawer_pulldown_even_row_color" format="reference"/>
    <attr name="drawer_pulldown_odd_row_color" format="reference"/>
    <attr name="menu_tile_title_text_color" format="reference"/>
    <attr name="entity_select_title_text_color" format="reference"/>

    <attr name="backgroundColor" format="reference|color"/>
    <attr name="subtitle" format="string"/>
    <attr name="img" format="reference"/>
    <attr name="textColor" format="reference|color"/>

    <declare-styleable name="ShrinkingLinearLayout">
        <attr name="shrinkable_view" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomButtonWithText">
        <attr name="backgroundColor"/>
        <attr name="subtitle"/>
        <attr name="img"/>
        <attr name="textColor"/>
    </declare-styleable>

    <declare-styleable name="ResizingTextView">
        <attr name="text_size_small" format="reference|dimension"/>
    </declare-styleable>

    <attr name="filter_select_background_color" format="reference"/>
    <attr name="filter_select_text_color" format="reference"/>

    <declare-styleable name="TabbedDetailView">
        <attr name="even_row_color" format="reference|color"/>
        <attr name="odd_row_color" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="ClippingView">
        <attr name="clip_start_x" format="reference|float"/>
        <attr name="clip_start_y" format="reference|float"/>
        <attr name="clip_width" format="reference|float"/>
        <attr name="clip_height" format="reference|float"/>
        <attr name="clip_corner_radius" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="FilePreference">
        <attr name="file_type" format="string"/>
    </declare-styleable>
    <declare-styleable name="CustomOtpView">
        <attr name="otpViewDigitCount" format="integer" />
        <attr name="otpViewBorderColor" format="color" />
        <attr name="otpViewBorderRadius" format="dimension" />
        <attr name="otpViewBorderWidth" format="dimension" />
        <attr name="otpViewTextColor" format="color" />
        <attr name="otpViewTextSize" format="dimension" />
        <attr name="otpViewErrorBorderColor" format="color" />
        <attr name="otpViewErrorTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="CustomEditText">
        <!-- Border attributes -->
        <attr name="editTextBorderWidth" format="dimension"/>
        <attr name="editTextCornerRadius" format="dimension"/>
        <attr name="editTextBorderColor" format="color"/>

        <!-- Editable attribute -->
        <attr name="editTextEditable" format="boolean"/>

        <!-- Drawable attributes -->
        <attr name="editTextDrawableStart" format="reference"/>
        <attr name="editTextDrawableEnd" format="reference"/>
        <attr name="editTextDrawableStartVisible" format="boolean"/>
        <attr name="editTextDrawableEndVisible" format="boolean"/>
        <attr name="editTextDrawableTint" format="color"/>

        <!-- Padding for drawables -->
        <attr name="editTextDrawableStartPaddingLeft" format="dimension"/>
        <attr name="editTextDrawableEndPaddingRight" format="dimension"/>
        <attr name="editTextDrawablePadding" format="dimension"/>

        <attr name="editTextText" format="string"/>
        <attr name="editTextHintColor" />
        <attr name="editTextTextSize" format="dimension"/>
        <attr name="editTextHint" format="string"/>
        <attr name="editTextHintSize" />

        <!-- New padding attributes -->
        <attr name="editTextPaddingTop" format="dimension" />
        <attr name="editTextPaddingBottom" format="dimension" />
        <attr name="editTextPaddingStart" format="dimension" />
        <attr name="editTextPaddingEnd" format="dimension" />
        <attr name="editTextFontFamily" format="string" />
    </declare-styleable>
    <attr name="editTextHintColor" format="color"/>
    <attr name="editTextHintSize" format="dimension"/>


</resources>
