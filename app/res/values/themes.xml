<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/green_A200</item>
    </style>
    
    
	<!--<style name="Theme.LightSliding" parent="@android:style/Theme.Light">-->
    <style name="Theme.LightSliding" parent="Theme.AppCompat.Light">
	    <item name="android:windowAnimationStyle">@style/Animation.ScreenAnimations</item>
	</style>
	<style name="Theme.Transparent" parent="android:Theme">
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:backgroundDimEnabled">false</item>
  	</style>

    <!--<style name="WindowTitle.Custom.Menu" parent="android:Widget.TextView">-->
	<style name="WindowTitle.Custom.Menu" parent="Widget.AppCompat.Light.AutoCompleteTextView">
	     <item name="android:textAppearance">@style/TextAppearance.Custom.WindowTitle</item>
	</style>

    <!-- <style name="WindowTitle.Custom.Case" parent="android:Widget.TextView"> -->
	<style name="WindowTitle.Custom.Case" parent="Widget.AppCompat.AutoCompleteTextView">
	     <item name="android:textAppearance">@style/TextAppearance.Custom.WindowTitle</item>
	</style>

    <!-- <style name="ProgressDialog.MessageText" parent="@android:style/TextAppearance"> -->
	<style name="ProgressDialog.MessageText" parent="TextAppearance.AppCompat">
	    <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
	</style>

     <style name="TextAppearance.Custom.WindowTitle" parent="@android:style/TextAppearance.WindowTitle"/>
</resources>
